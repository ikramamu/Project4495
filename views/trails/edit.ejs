<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Trail</h1>
        <div class="col-md-6 offset-md-3">
            <div class="card-shadow">
                <div class="card-body">
            <form action="/trails/<%=trail._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="trail[title]"  value="<%=trail.title%>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="trail[location]" value="<%=trail.location%>" required>
            </div>
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Choose file</label>
                <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
              </div>
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Add Images</label>
                <input type="file" name="image" id="" multiple>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="trail[description]" required><%=trail.description%></textarea>
            </div>
            <!-- Questions and Answers-->
            <div class="mb-3">
                <label class="form-label" for="difficultyLevel">Difficulty</label>
                <input class="form-control" type="text" id="difficultyLevel" name="trail[difficultyLevel]" required >
            </div>
            <div class="mb-3">
                <label class="form-label" for="trailLength">Trail length</label>
                <div class="input-group">
                    <span class="input-group-text" id="trailLength-label">Kms</span>
                    <input class="form-control" type="text" id="trailLength" name="trail[trailLength]" required placeholder="0.0" aria-label="trailLength"
                    aria-describedby="trailLength">
                </div>
                
            </div>
            <div class="mb-3">
                <label class="form-label" for="fitnessLevel">Physical Rating</label>
                <input class="form-control" type="text" id="fitnessLevel" name="trail[fitnessLevel]" required >
            </div>
            <!-- Questions and Answers-->
            <div class="mb-3">
                <button class="btn btn-info">Update Trail</button>
            </div>
            
        </form>
        <a href="/trails/<%= trail._id%>">Back To Trails</a>
    </div>
    </div>
</div>
    </div>
